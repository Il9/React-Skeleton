{
  "compilerOptions": {
    "target": "esnext",

    // Module
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    // Path
    "baseUrl": ".",
    "paths": {
      "@src": ["src"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@core": ["src/core"],
      "@api": ["src/core/api"],
      "@api/*": ["src/core/api/*"],
      "@config": ["src/core/config"],
      "@config/*": ["src/core/config/*"],
      "@service": ["src/core/service"],
      "@service/*": ["src/core/service/*"],
      "@util": ["src/core/util"],
      "@util/*": ["src/core/util/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@styles": ["src/styles"],
      "@stores/*": ["src/styles/*"]
    },

    // Log
    "locale": "ko",
    "pretty": true,

    // JS
    "allowJs": true,

    // React
    "jsx": "preserve",
    
    // Lint
    "strict": true,
    // "noFallthroughCasesInSwitch": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    // Edit Outfile
    "noEmit": true,

    // More Spec
    "lib": ["dom", "es2017"],

    // Etc
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", ".next", "out"],
}